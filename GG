    const [name,emoji,rarity] = list[i].split('|');
    const num = String(i+1).padStart(3,'0');
    items.push({ id: num, name: `${num} ${name}`, emoji: emoji||'ğŸ½ï¸', rarity: rarity||'Common' });
  }
  return items;
